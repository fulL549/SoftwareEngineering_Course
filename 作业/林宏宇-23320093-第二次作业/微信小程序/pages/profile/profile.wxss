page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.profile-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.header {
  padding: 10rpx 30rpx;
  margin-top: 44rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content-scroll {
  flex: 1;
  padding: 0 30rpx;
  height: calc(100vh - 90rpx);
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  width: 100%;
}

.user-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
  background-color: #f0f0f0;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-section {
  padding: 0 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  height: 50rpx;
}

.info-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #999;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.action-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.action-item:last-child {
  border-bottom: none;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.action-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 点击状态 */
.action-item:active {
  background-color: #f9f9f9;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #1296db;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.login-btn:active {
  opacity: 0.8;
}

.logout {
  margin-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.logout-text {
  color: #ff4d4f;
}

.safe-area-bottom {
  height: 50rpx;
  width: 100%;
}

.captain-badge {
  background-color: #07c160;
  color: white;
  border-radius: 30rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
} 